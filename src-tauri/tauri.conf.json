{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "3D打印订单管理",
  "version": "0.1.0",
  "identifier": "com.ixdenas.order-manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "3D 打印订单管理",
        "width": 1100,
        "height": 760,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "wix": {
        "language": "zh-CN"
      }
    }
  }
}
