{
    "name":  "printorder",
    "private":  true,
    "version":  "0.1.0",
    "description":  "PrintOrder - 鏈湴 3D 鎵撳嵃璁㈠崟绠＄悊宸ュ叿",
    "author":  "ix-prism",
    "license":  "GPL-3.0-only",
    "type":  "module",
    "main":  "electron/main.cjs",
    "scripts":  {
                    "dev":  "vite",
                    "build":  "vite build",
                    "preview":  "vite preview",
                    "electron":  "set ELECTRON_RUN_AS_NODE=\u0026\u0026 electron .",
                    "electron:dev":  "concurrently -k \"vite\" \"wait-on http://localhost:5180 \u0026\u0026 set VITE_DEV_SERVER_URL=http://localhost:5180\u0026\u0026 set ELECTRON_RUN_AS_NODE=\u0026\u0026 electron .\"",
                    "pack":  "npm run build \u0026\u0026 set CSC_IDENTITY_AUTO_DISCOVERY=false\u0026\u0026 electron-builder --win portable",
                    "dist":  "npm run build \u0026\u0026 set CSC_IDENTITY_AUTO_DISCOVERY=false\u0026\u0026 electron-builder",
                    "icons:generate":  "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/generate-icons.ps1 \u0026\u0026 node scripts/make-ico.mjs"
                },
    "dependencies":  {
                         "jszip":  "^3.10.1",
                         "three":  "^0.167.1"
                     },
    "devDependencies":  {
                            "concurrently":  "^9.1.0",
                            "electron":  "^32.2.0",
                            "electron-builder":  "^24.13.3",
                            "png-to-ico":  "^2.1.8",
                            "typescript":  "^5.6.3",
                            "vite":  "^5.4.11",
                            "wait-on":  "^7.2.0"
                        },
    "build":  {
                  "appId":  "com.printstudio.printorder",
                  "productName":  "PrintOrder",
                  "icon":  "build/icon.ico",
                  "directories":  {
                                      "output":  "release"
                                  },
                  "files":  [
                                "dist/**",
                                "electron/**",
                                "package.json"
                            ],
                  "asar":  true,
                  "win":  {
                              "icon":  "build/icon.ico",
                              "target":  [
                                             {
                                                 "target":  "portable"
                                             }
                                         ]
                          }
              }
}
